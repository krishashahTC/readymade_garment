<br>
<center><h2>List of Sub Categories </h2></center>
<div class='row offset-5'>
  <h5>Category: </h5>
  <%= @category.name %>
</div>
<div class='col-md-6 offset-md-3'>
  <table class= 'table table-bordered'>
    <tr>
      <th colspan="2">Sub Category</th>
      <th colspan="3">Oprations</th>
    </tr>

    <% @sub_categories.each do |sub_category| %>
			<tr>
				<td><%= sub_category.name %></td>
				<td><%= sub_category.gender %></td>
        <td><%= link_to 'Edit',edit_category_sub_category_path(@category,sub_category) %></td>
        <td><%= link_to 'Destroy', category_sub_category_path(@category,sub_category),
                method: :delete,
                data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>
</div>
<div class='col-md-7 offset-md-4'>
  <%= link_to 'Add Sub Category', new_category_sub_category_path(@category), class: 'btn btn-primary' %>
  <%= link_to 'Back ', categories_path, class: 'btn btn-primary'%>
  <%= link_to 'Home ', admin_index_path, class: 'btn btn-primary'%>
</div>