<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">x</button>
</div>

<%= form_for @size, url: size_index_path do |form| %>
  <div class="modal-body">
    <div class='row'>
      <%= form.label :Measurement, class: 'col-3' %>
      <%= form.text_field :measurements, class: 'col-7 form-control', required: :true%>
    </div>
  </div>
  <div class="modal-footer">
    <%= form.submit :Submit, class: 'btn btn-primary' %>
  </div>
<% end %>
